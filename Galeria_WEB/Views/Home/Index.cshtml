<style>
    .section {
        text-align: center;
        margin: 10% 35%;
        background-color: white;
        opacity: 0.9;
        padding: 10px 10px;
    }

    .form-group {
        text-align: left;
        font-size: 20px;
    }
</style>
<div class="section">
    <h1>WELCOME TO CLOUD GALLERY</h1>

    <form action="/Home/Welcome" method="post" id="myForm" class="wx-50" style="padding-left: 20px">
        <div class="form-group">
            <label for="formGroupExampleInput">UserName</label>
            <input type="text" name="Username" placeholder="Ingrese su nombre de usuario" class="form-control" />
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput">Contraseña</label>
            <input type="password" name="password" placeholder="Ingrese su contraseña" class="form-control" />
        </div>
        <div class="Boton">
            <input type="submit" name="Ingresar" value="Ingresar" class="form-control btn-primary" />
        </div>
        <input type="text" name="switch" value="2" hidden />
        <b>@ViewData["Error"]</b>
    </form>
    <h5>¿No tiene una cuenta?<br /><a href="/Home/Registro">Registrar</a></h5>
</div>
